<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.conferencemanager.doctor.DoctorInvitesFragment">

    <!--The invites listview-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/doctor_invites_listview"
        android:dividerHeight="@dimen/activity_vertical_margin_half"
        android:elevation="@dimen/standard_elevation"
        android:divider="@color/material_grey_300_local"
        android:background="@drawable/listview_style"/>

    <!--No invites textview-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doctor_invites_no_rows"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:visibility="gone"
        android:textColor="@color/colorAccent"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/doctor_no_invites"/>
</FrameLayout>
