<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.conferencemanager.doctor.DoctorInviteDetailsActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <!--*******Title********-->
        <!--Title text view-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black"
            android:text="@string/doctor_invite_details_title"/>

        <!--Title value-->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_title_value"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:editable="true"
            android:enabled="false"
            android:layout_below="@+id/doctor_invite_details_title"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_grey_800_local"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Title"/>

        <!--*******Description********-->
        <!--Description text view-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_description"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/doctor_invite_details_title_value"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black"
            android:text="@string/doctor_invite_details_description"/>

        <!--Description value-->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_description_value"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:editable="true"
            android:enabled="false"
            android:layout_below="@+id/doctor_invite_details_description"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_grey_800_local"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="6"
            tools:text="Background sticky concurrent mark sweep GC freed 14957(857KB) AllocSpace objects, 2(40KB) LOS objects, 70% free, 1082KB/3MB"/>


        <!--*******Address********-->
        <!--Address text view-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_address"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/doctor_invite_details_description_value"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black"
            android:text="@string/doctor_invite_details_address"/>

        <!--Address value-->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_address_value"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:editable="true"
            android:enabled="false"
            android:layout_below="@+id/doctor_invite_details_address"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_grey_800_local"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="The application may be doing too much work on its main thread."/>

        <!--*******Date********-->
        <!--Date text view-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_date"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/doctor_invite_details_address_value"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black"
            android:text="@string/doctor_invite_details_date"/>

        <!--Date value-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_invite_details_date_value"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:editable="true"
            android:enabled="false"
            android:layout_below="@+id/doctor_invite_details_date"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_grey_800_local"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="The application may be doing too much work on its main thread."/>
    </RelativeLayout>

    <!--The accept button-->
    <Button
        android:layout_width="@dimen/standard_button_width"
        android:layout_height="@dimen/standard_button_height_two"
        android:id="@+id/doctor_invite_details_accept"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/doctor_invite_details_accept"
        android:textSize="@dimen/Material.Text.Headline.Size"
        android:padding="@dimen/activity_vertical_margin_half"
        android:background="@drawable/button_selector_green"
        android:textColor="@color/white"/>

    <!--The decline button-->
    <Button
        android:layout_width="@dimen/standard_button_width"
        android:layout_height="@dimen/standard_button_height_two"
        android:id="@+id/doctor_invite_details_decline"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/doctor_invite_details_decline"
        android:textSize="@dimen/Material.Text.Headline.Size"
        android:padding="@dimen/activity_vertical_margin_half"
        android:background="@drawable/button_selector_green"
        android:textColor="@color/white"/>

</RelativeLayout>
