<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/material_grey_300" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/activity_vertical_margin_half"
        android:left="@dimen/activity_vertical_margin_half"
        android:right="@dimen/activity_vertical_margin_half"
        android:top="@dimen/activity_vertical_margin_half">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/standard_elevation" />
            <solid android:color="@color/card_shadow" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/activity_vertical_margin_half"
        android:left="@dimen/activity_vertical_margin_half"
        android:right="@dimen/activity_vertical_margin_half"
        android:top="@dimen/activity_vertical_margin_half">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/standard_elevation" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>